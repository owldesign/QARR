{% extends "_layouts/cp" %}

{% do view.registerAssetBundle("owldesign\\qarr\\web\\assets\\UI") %}
{% do view.registerAssetBundle("owldesign\\qarr\\web\\assets\\Utilities") %}

{% set title = "Settings"|t('qarr') %}
{% set selectedSubnavItem = "settings" %}
{% set selectedSidebarItem = "settings" %}
{% set bodyClass = "qarr qarr-element-static" %}

{% block sidebar %}
    {% include 'qarr/settings/_includes/sidebar' ignore missing %}
{% endblock %}

{% set content %}

    <h2>{{ 'Geolocations'|t('qarr') }}</h2>

    <table class="data fullwidth fixed-layout">
        <tbody>
            <tr>
                <th class="light">{{ 'Update geolocation for all entries based on submitters IP address.'|t('qarr') }}</th>
                <td class="text-right"><a href="#" class="btn submit" id="update-geolocations" data-tippy-theme="light" data-tippy-arrow="true" data-tippy="Geolocation will be used to pinpoint customer's locations for better statistics and reporting.">{{ 'Update Geolocations'|t('qarr') }}</a></td>
            </tr>
        <tr>
            <th class="light">{{ 'Fix reviews and questions after an element has been removed from CMS'|t('qarr') }}</th>
            <td class="text-right">
                <a href="#" class="btn submit" id="fix-review-elements">{{ 'Fix Reviews' }}</a>

                &emsp;

                <a href="#" class="btn submit" id="fix-question-elements">{{ 'Fix Questions' }}</a>
            </td>
        </tr>
        </tbody>
    </table>

{% endset %}
