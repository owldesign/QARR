{% import "_includes/forms" as forms %}

<div class="field">
    <div class="heading">
        <label for="{{ id }}">{{ 'Type'|t('qarr') }}</label>
    </div>
    <div class="input ltr">
        <div class="select">
            <select name="type" id="{{ id }}">
                <option value="reviews" {% if widget.type == 'reviews' %} selected{% endif %}>{{ 'Reviews'|t('qarr') }}</option>
                <option value="questions" {% if widget.type == 'questions' %} selected{% endif %}>{{ 'Questions'|t('qarr') }}</option>
            </select>
        </div>

    </div>
</div>

{{ forms.textField({
    label: "Limit"|t('qarr'),
    id: 'limit',
    name: 'limit',
    value: widget.limit,
    size: 2,
    errors: widget.getErrors('limit')
}) }}
